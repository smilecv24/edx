<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EDX</title>
</head>
<body>
<ul>
    <% if (typeof toys === 'object') { %>

    <% toys.forEach( (toy) => { %>
    <li>
        <%= toy.id %>, <%= toy.name %>, <%= toy.price %>
    </li>
    <% }); %>
    <% } %>

    <% if (typeof items === 'object') { %>

    <% items.forEach( (toy) => { %>
    <li>
        <%= toy.item %>, <%= toy.qty %>, <%= toy.subtotal %>
    </li>
    <% }); %>
    <% } %>

</ul>

<% if (typeof totalPrice === 'number') { %>
Total price = <%= totalPrice %>
<% } %>

</body>
</html>